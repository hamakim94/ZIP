<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/navigation_graph"
    app:startDestination="@id/homeFragment">
    <fragment
        android:id="@+id/homeFragment"
        android:name="com.ssafy.zip.android.HomeFragment"
        android:label="fragment_home"
        tools:layout="@layout/fragment_home" />
    <fragment
        android:id="@+id/recordFragment"
        android:name="com.ssafy.zip.android.RecordFragment"
        android:label="fragment_record"
        tools:layout="@layout/fragment_record" >
        <action
            android:id="@+id/action_recordFragment_to_recordQuizFragment"
            app:destination="@id/recordQuizFragment" />
        <action
            android:id="@+id/action_recordFragment_to_recordLetterFragment"
            app:destination="@id/recordLetterFragment" />
    </fragment>
    <fragment
        android:id="@+id/calendarFragment"
        android:name="com.ssafy.zip.android.CalendarFragment"
        android:label="fragment_calendar"
        tools:layout="@layout/fragment_calendar" />
    <fragment
        android:id="@+id/notificationFragment"
        android:name="com.ssafy.zip.android.NotificationFragment"
        android:label="fragment_notification"
        tools:layout="@layout/fragment_notification" />
    <fragment
        android:id="@+id/recordQuizFragment"
        android:name="com.ssafy.zip.android.RecordQuizFragment"
        android:label="RecordQuizFragment" />
    <fragment
        android:id="@+id/recordLetterFragment"
        android:name="com.ssafy.zip.android.RecordLetterFragment"
        android:label="RecordLetterFragment" />
</navigation>