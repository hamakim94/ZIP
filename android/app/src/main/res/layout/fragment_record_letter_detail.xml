<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/board_recycler_view"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".RecordBoardFragment"
    android:orientation="vertical">


    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/profileContanier"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <com.google.android.material.imageview.ShapeableImageView
            android:id="@+id/letterImageDetail"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_marginStart="8dp"
            android:scaleType="centerCrop"
            app:shapeAppearanceOverlay="@style/circleImageView"
            android:adjustViewBounds="true"
            android:src="@drawable/userimage1"
            app:layout_constraintBottom_toBottomOf="@id/profileContanier"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="@id/profileContanier" />

        <TextView
            android:id="@+id/letterUserNicknameDetail"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="누구누구 에게서 온 편지"
            android:textSize="15sp"
            android:textColor="@color/black"
            android:textStyle="bold"
            android:layout_marginStart="8dp"
            app:layout_constraintBottom_toTopOf="@+id/letterRegDetail"
            app:layout_constraintStart_toEndOf="@id/letterImageDetail"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.5"
            app:layout_constraintVertical_chainStyle="packed"/>

        <androidx.constraintlayout.utils.widget.ImageFilterButton
            android:id="@+id/mailIcon"
            android:layout_width="22dp"
            android:layout_height="20dp"
            android:layout_marginStart="4dp"
            android:src="@drawable/ic_baseline_mail_24"
            app:layout_constraintStart_toEndOf="@id/letterUserNicknameDetail"
            app:layout_constraintTop_toTopOf="@id/letterUserNicknameDetail">

        </androidx.constraintlayout.utils.widget.ImageFilterButton>

        <TextView
            android:id="@+id/letterRegDetail"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="22/10/22"
            android:textSize="10sp"
            android:layout_marginStart="8dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toEndOf="@id/letterImageDetail"
            app:layout_constraintTop_toBottomOf="@+id/letterUserNicknameDetail"

            app:layout_constraintVertical_bias="0.5" />

    </androidx.constraintlayout.widget.ConstraintLayout>

    <LinearLayout
        android:id="@+id/letter_container"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/textview_border"
        android:padding="8dp">
        <TextView
            android:id="@+id/letterContentDetail"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="편지내용상세"
            android:textColor="@color/black"></TextView>
    </LinearLayout>



</LinearLayout>