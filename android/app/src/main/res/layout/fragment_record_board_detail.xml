<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/board_recycler_view"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".RecordBoardFragment"
    android:orientation="vertical">

    <!--    조건을 넣어서 , 어떤걸 보여줄지 정하는 느낌?-->
    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="게시글 상세"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"></TextView>

    </androidx.constraintlayout.widget.ConstraintLayout>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/profileContanier"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <com.google.android.material.imageview.ShapeableImageView
            android:id="@+id/profileImageDetail"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_marginStart="8dp"
            android:scaleType="centerCrop"
            app:shapeAppearanceOverlay="@style/circleImageView"
            android:adjustViewBounds="true"
            android:src="@drawable/userimage1"
            app:layout_constraintBottom_toBottomOf="@id/profileContanier"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="@id/profileContanier" />

        <TextView
            android:id="@+id/userNicknameDetail"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/usernickname1"
            android:textSize="15sp"
            android:textColor="@color/black"
            android:textStyle="bold"
            android:layout_marginStart="8dp"
            app:layout_constraintBottom_toTopOf="@+id/boardRegDetail"
            app:layout_constraintStart_toEndOf="@id/profileImageDetail"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.5"
            app:layout_constraintVertical_chainStyle="packed"/>

        <TextView
            android:id="@+id/boardRegDetail"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/boardreg1"
            android:textSize="10sp"
            android:layout_marginStart="8dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toEndOf="@id/profileImageDetail"
            app:layout_constraintTop_toBottomOf="@+id/userNicknameDetail"

            app:layout_constraintVertical_bias="0.5" />

    </androidx.constraintlayout.widget.ConstraintLayout>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/imageContainer"
        android:layout_width="match_parent"
        android:layout_height="260dp"
        app:layout_constraintTop_toBottomOf="@id/profileContanier"
        app:layout_constraintStart_toStartOf="parent"
        >
        <ImageView
            android:id="@+id/boardImageDetail"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:src="@drawable/boardimage1"
            android:scaleType="fitXY"/>

    </androidx.constraintlayout.widget.ConstraintLayout>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/commentContainer"
        android:layout_width="match_parent"
        android:layout_height="80dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/imageContainer">
        <TextView
            android:id="@+id/boardContent"
            android:layout_width="wrap_content"
            android:layout_height="60dp"
            android:text="@string/boardcontent1"
            android:textColor="@color/black"
            app:layout_constraintStart_toStartOf="@id/commentContainer"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_margin="8dp">

        </TextView>
        <androidx.constraintlayout.utils.widget.ImageFilterButton
            android:id="@+id/commentButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintBottom_toBottomOf="@id/commentContainer"
            app:layout_constraintEnd_toStartOf="@id/commentCountDetail"
            android:src="@drawable/ic_comment_show"
            android:layout_marginBottom="8dp"
            android:layout_marginEnd="4dp">

        </androidx.constraintlayout.utils.widget.ImageFilterButton>

        <TextView
            android:id="@+id/commentCountDetail"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:layout_marginEnd="8dp"
            android:layout_marginBottom="8dp"
            android:text="233"
            android:textSize="15sp"
            app:layout_constraintBottom_toBottomOf="@id/commentContainer"
            app:layout_constraintEnd_toEndOf="@id/commentContainer"
            app:layout_constraintTop_toTopOf="@id/commentButton">>

        </TextView>


    </androidx.constraintlayout.widget.ConstraintLayout>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/comment_recyclerview"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:listitem="@layout/comment_item" />
    <EditText
        android:layout_width="match_parent"
        android:layout_height="match_parent">

    </EditText>

</LinearLayout>