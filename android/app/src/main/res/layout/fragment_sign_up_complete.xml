<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".SignUpCompleteFragment">

    <ImageView
        android:id="@+id/complete_check"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/ic_baseline_check_complete"
        app:layout_constraintBottom_toTopOf="@+id/guideline"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/complete_topleft"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="8dp"
        android:text="회원가입이"
        app:layout_constraintBottom_toTopOf="@+id/complete_bot1"
        app:layout_constraintEnd_toStartOf="@id/complete_topmid"
        app:layout_constraintHorizontal_chainStyle="packed"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/complete_check"></TextView>
    <TextView
        android:id="@+id/complete_topmid"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:textStyle="bold"
        android:textColor="@color/main_color"
        android:text="완료"
        app:layout_constraintTop_toBottomOf="@id/complete_check"
        app:layout_constraintStart_toEndOf="@id/complete_topleft"
        app:layout_constraintEnd_toStartOf="@id/complete_topright"></TextView>
    <TextView
        android:id="@+id/complete_topright"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:layout_marginStart="8dp"
        android:text="되었습니다"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@id/complete_topmid"
        app:layout_constraintTop_toBottomOf="@id/complete_check"></TextView>

    <TextView
        android:id="@+id/complete_bot1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="8dp"
        android:textStyle="bold"
        android:textColor="@color/main_color"
        android:text="이메일 인증"
        app:layout_constraintEnd_toStartOf="@id/complete_bot2"
        app:layout_constraintHorizontal_chainStyle="packed"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/complete_topleft"></TextView>
    <TextView
        android:id="@+id/complete_bot2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:text="후"
        app:layout_constraintTop_toBottomOf="@id/complete_topleft"
        app:layout_constraintStart_toEndOf="@id/complete_bot1"
        app:layout_constraintEnd_toStartOf="@id/complete_bot3"></TextView>
    <TextView
        android:id="@+id/complete_bot3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:layout_marginStart="8dp"
        android:textStyle="bold"
        android:textColor="@color/main_color"
        android:text="로그인"
        app:layout_constraintEnd_toStartOf="@id/complete_bot4"
        app:layout_constraintStart_toEndOf="@id/complete_bot2"
        app:layout_constraintTop_toBottomOf="@id/complete_topleft"></TextView>
    <TextView
        android:id="@+id/complete_bot4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:layout_marginStart="8dp"
        android:text="해주세요!!!!"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@id/complete_bot3"
        app:layout_constraintTop_toBottomOf="@id/complete_topleft"></TextView>
    <androidx.constraintlayout.widget.Guideline
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/guideline"
        app:layout_constraintGuide_percent="0.7"
        android:orientation="horizontal"/>
    <Button
        android:id="@+id/btn_login"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="8dp"
        android:text="@string/login_text"
        android:textSize="16dp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/complete_bot1" />
</androidx.constraintlayout.widget.ConstraintLayout>